{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "declaration": true,
        "module": "commonjs",
        "rootDir": "./src",
        "sourceMap": true,
        "sourceRoot": ".",
        "target": "es5",
        "outDir": ".",
        "moduleResolution": "node"
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./typings/**/*.d.ts"
    ],
    "compileOnSave": true,
    "files": [
        "./src/lib/equals.ts",
        "./src/lib/expressionToLiteral.ts",
        "./src/lib/factories.ts",
        "./src/lib/factoryToReflective.ts",
        "./src/lib/factoryToSerial.ts",
        "./src/lib/filter.ts",
        "./src/lib/index.ts",
        "./src/lib/model.ts",
        "./src/lib/serialToFactory.ts",
        "./src/lib/serialiserParser.ts",
        "./src/lib/toString.ts",
        "./src/lib/typeConstructor.ts",
        "./src/lib/typeUtils.ts",
        "./src/lib/visitor.ts",
        "./typings/es6/es6.d.ts",
        "./typings/node/node.d.ts",
        "./typings/tsd.d.ts"
    ]
}
